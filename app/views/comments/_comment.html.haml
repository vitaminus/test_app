%li
  = time_ago_in_words(comment.created_at)
  ago by
  = comment.user.email
  ago
  %br
  = comment.body
  .reply-button reply
  .reply-form
    = form_for [comment, Comment.new] do |f|
      = f.text_area :body
      = f.submit
  %ul= render partial: 'comments/comment', collection: comment.comments, as: :comment
